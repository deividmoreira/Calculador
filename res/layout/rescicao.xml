<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="horizontal">
  	<ScrollView android:id="@+id/scrollRescicao">
		<TextView 
	    	android:text="Salário base" 
	    	android:id="@+id/textSalarioBase" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content"/>
	    <EditText 
	    	android:id="@+id/editSalarioBase" 
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:hint="Digite o salário base"
	    	android:inputType="numberDecimal"/>
	    <TextView 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/textFeriasVencidas" 
	    	android:text="Férias vencidas"/>
	    <Spinner 
	    	android:id="@+id/spinnerFeriasVencidas" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content"
	    	/>
    	
	</ScrollView>   	
</TableLayout>
